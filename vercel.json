{
  "version": 2,
  "builds": [
    {
      "src": "package.json", 
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }  
    },
    {
      "src": "../Backend/server.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "../Backend/server.js" },  
    { "src": "/(.*)", "dest": "/dist/index.html" } 
  ],
  "env": {
    "NODE_ENV": "production"
  }
}